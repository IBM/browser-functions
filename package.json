{
    "name": "browser-functions",
    "version": "1.0.0",
    "description": "Functions as a service, executed by a browser",
    "main": "index.js",
    "scripts": {
        "start": "nodemon --inspect server/server.js --ignore functions_root/ | pino-pretty -t SYS:standard -i hostname",
        "start:prod": "NODE_ENV=production node server/server.js",
        "build": "next build ui"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com/IBM/browser-functions.git"
    },
    "nodemonConfig": {
        "ignore": [
            "functions_root/*"
        ]
    },
    "contributors": [
        "Toby Kurien <toby.kurien@za.ibm.com>",
        "Richard Young <richard.young2@ibm.com>"
    ],
    "license": "Apache-2.0",
    "dependencies": {
        "@blueprintjs/core": "^3.36.0",
        "@monaco-editor/react": "^3.7.2",
        "body-parser": "1.18.3",
        "chokidar": "3.2.1",
        "connect-timeout": "1.9.0",
        "esbuild": "^0.8.20",
        "esinstall": "^0.4.0",
        "events": "^3.2.0",
        "express": "4.16.4",
        "formidable": "1.2.1",
        "nanoid": "^3.1.20",
        "next": "^10.0.3",
        "pino": "5.12.6",
        "pouchdb-adapter-indexeddb": "^7.2.2",
        "puppeteer": "1.18.1",
        "puppeteer-firefox": "0.5.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "rxdb": "^9.10.1",
        "rxjs": "^6.6.3",
        "socket.io": "2.3.0",
        "tail": "2.0.2"
    },
    "devDependencies": {
        "@types/react": "^17.0.0",
        "nodemon": "2.0.4",
        "pino-pretty": "3.2.0",
        "typescript": "^4.1.3"
    }
